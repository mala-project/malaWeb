LAMMPS (2 Jun 2022)
# Calculate SNAP descriptors on a 3D grid

# pass in values ngridx, ngridy, ngridz, twojmax, rcutfac, atom_config_fname
# using command-line -var option

# Initialize simulation

units		metal

read_data ${atom_config_fname}
read_data ./lammps_input.tmp
Reading data file ...
  triclinic box = (0 0 0) to (2.2598259 1.9570657 3.5698786) with tilt (-1.1299129 0 0)
  1 by 1 by 1 MPI processor grid
  reading atoms ...
  2 atoms
  read_data CPU = 0.000 seconds
mass * 1.0

# define grid compute and atom compute

group 		snapgroup type 1
2 atoms in group snapgroup
variable 	rfac0 equal 0.99363
variable 	rmin0 equal 0
variable 	wj equal 1
variable 	radelem equal 0.5
variable 	bzero equal 0
variable 	quadratic equal 0
variable 	switch equal 0

#variable        snap_options string #"${rcutfac} ${rfac0} ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} quadraticflag ${quadratic} bzeroflag ${bzero} switchflag ${switch}"

#compute bgrid all sna/grid grid ${ngridx} ${ngridy} ${ngridz} ${snap_options}

compute bgrid all sna/grid grid ${ngridx} ${ngridy} ${ngridz} ${rcutfac} ${rfac0} ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 ${ngridy} ${ngridz} ${rcutfac} ${rfac0} ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 ${ngridz} ${rcutfac} ${rfac0} ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 ${rcutfac} ${rfac0} ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 ${rfac0} ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 ${twojmax} ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 ${radelem} ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 0.5 ${wj} rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 0.5 1 rmin0 ${rmin0} bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 0.5 1 rmin0 0 bzeroflag ${bzero} quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 0.5 1 rmin0 0 bzeroflag 0 quadraticflag ${quadratic} switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 0.5 1 rmin0 0 bzeroflag 0 quadraticflag 0 switchflag ${switch}
compute bgrid all sna/grid grid 18 18 27 4.67637 0.99363 10 0.5 1 rmin0 0 bzeroflag 0 quadraticflag 0 switchflag 0


# create dummy potential for neighbor list


# is this important? or does it just need to be big enough?
variable rcutneigh equal 2.0*${rcutfac}*${radelem}
variable rcutneigh equal 2.0*4.67637*${radelem}
variable rcutneigh equal 2.0*4.67637*0.5
# for water
#variable rcutneigh equal 4.0*${rcutfac}*${radelem}

pair_style zero ${rcutneigh}
pair_style zero 4.67637
pair_coeff * *

# define output

thermo_style	custom step temp ke pe vol c_bgrid[1][1]
thermo_modify norm yes

# run

run 0
